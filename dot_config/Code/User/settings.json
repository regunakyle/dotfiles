{
  "[bibtex][latex]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "James-Yu.latex-workshop"
  },
  "[css][html][javascript][javascriptreact][json][jsonc][jsx-tags][scss][typescript][typescriptreact][github-actions-workflow][dockercompose]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[gitignore][ignore][properties][shellscript]": {
    "editor.formatOnSave": true,
    // Note to self: shfmt does not support zsh syntax
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[dockerfile]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "ms-azuretools.vscode-containers"
  },
  "[markdown]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
  },
  "[python]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "[toml]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },
  "[xml]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "redhat.vscode-xml"
  },
  "[yaml]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "chat.disableAIFeatures": true,
  "containers.containerClient": "com.microsoft.visualstudio.containers.podman",
  "continue.enableNextEdit": false,
  "cSpell.enabledFileTypes": {
    "*": false,
    "asciidoc": true,
    "git-commit": true,
    "git-rebase": true,
    "latex": true,
    "markdown": true,
    "restructuredtext": true
  },
  "cSpell.language": "en-GB",
  "diffEditor.hideUnchangedRegions.enabled": false,
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.fontFamily": "'Sarasa Fixed Slab HC', 'Symbols Nerd Font Mono', monospace",
  "editor.fontSize": 16,
  "editor.linkedEditing": true,
  "editor.renderWhitespace": "all",
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "keyword.other.dotenv",
        "settings": {
          "foreground": "#FF000000"
        }
      }
    ]
  },
  "editor.wordWrap": "on",
  "extensions.ignoreRecommendations": true,
  "files.exclude": {
    "**/.venv": true,
    "**/.idea": true,
    "**/node_modules": true,
    "**/__pycache__": true,
    "**/.mypy_cache": true,
    "**/.pytest_cache": true,
    "**/.ruff_cache": true
  },
  "gitlens.telemetry.enabled": false,
  "javascript.preferGoToSourceDefinition": true,
  "jupyter.askForKernelRestart": false,
  "latex-workshop.formatting.latex": "latexindent",
  "notebook.formatOnSave.enabled": true,
  "partialDiff.enableTelemetry": false,
  "python.analysis.typeCheckingMode": "strict",
  "python.analysis.diagnosticMode": "workspace",
  "python.analysis.languageServerMode": "full",
  "redhat.telemetry.enabled": false,
  "telemetry.telemetryLevel": "off",
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "typescript.preferGoToSourceDefinition": true,
  "typescript.tsserver.experimental.enableProjectDiagnostics": true,
  "vsicons.dontShowNewVersionMessage": true,
  "workbench.colorCustomizations": {
    "statusBar.debuggingBackground": "#cc6633",
    "statusBar.debuggingForeground": "#ffffff",
    "statusBarItem.remoteBackground": "#16825d",
    "statusBarItem.remoteForeground": "#ffffff"
  },
  "workbench.editor.revealIfOpen": true,
  "workbench.iconTheme": "vscode-icons"
}
