{
  "[bibtex][latex]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "James-Yu.latex-workshop"
  },
  "[css][html][javascript][javascriptreact][json][jsonc][jsx-tags][scss][typescript][typescriptreact][github-actions-workflow][dockercompose]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.linkedEditing": true,
  "typescript.tsserver.experimental.enableProjectDiagnostics": true,
  "[dockerfile][gitignore][ignore][properties][shellscript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  // Running google-java-format manually with the Run On Save extension
  "emeraldwalk.runonsave": {
    "commands": [
      {
        "match": "\\.java$",
        "cmd": "google-java-format --replace ${file}"
      }
    ]
  },
  "java.checkstyle.configuration": "/google_checks.xml",
  "[markdown]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
  },
  "[python]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "mypy-type-checker.reportingScope": "workspace",
  "[toml]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },
  "[xml]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "redhat.vscode-xml"
  },
  "[yaml]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "cSpell.enableFiletypes": [
    "!asciidoc",
    "!c",
    "!cpp",
    "!csharp",
    "!css",
    "!go",
    "!handlebars",
    "!haskell",
    "!html",
    "!jade",
    "!java",
    "!javascript",
    "!javascriptreact",
    "!json",
    "!jsonc",
    "!jupyter",
    "!less",
    "!php",
    "!pug",
    "!python",
    "!restructuredtext",
    "!rust",
    "!scala",
    "!scss",
    "!typescriptreact",
    "!yaml",
    "!yml",
    "excel",
    "po"
  ],
  "discord.removeRemoteRepository": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.fontFamily": "'Sarasa Fixed Slab HC', 'Symbols Nerd Font Mono', monospace",
  "editor.fontSize": 16,
  "terminal.integrated.fontSize": 16,
  "editor.renderWhitespace": "all",
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "keyword.other.dotenv",
        "settings": {
          "foreground": "#FF000000"
        }
      }
    ]
  },
  "extensions.ignoreRecommendations": true,
  "files.exclude": {
    "**/.venv": true,
    "**/node_modules": true,
    "**/__pycache__": true,
    "**/.mypy_cache": true,
    "**/.pytest_cache": true
  },
  "gitlens.telemetry.enabled": false,
  "jupyter.askForKernelRestart": false,
  "notebook.formatOnSave.enabled": true,
  "partialDiff.enableTelemetry": false,
  "redhat.telemetry.enabled": false,
  "telemetry.telemetryLevel": "off",
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "vsicons.dontShowNewVersionMessage": true,
  "workbench.iconTheme": "vscode-icons"
}
